@page
@model TicketApp.Pages.CompletedTasklistPage8Model
@{
}


 <table border="1" width="100%">
        <thead>
            <tr>
                <th>Subject</th>
                <th>Description</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @* form içerisinden birden fazla veri gönderdiğimizde index mekanizmasını kullanırız. bu sebep ile foreach yerine for kullandık *@

        

            @for (int i = 0; i < Model.OpenTickets.Count; i++)
            {
            <tr>
                <td>
                    <input asp-for="OpenTickets[i].Id " type="text" placeholder="Subject" />
                </td>
                <td>
                    <input asp-for="OpenTickets[i].Description" placeholder="Description" />
                </td>
                <td>
                    <input asp-for="OpenTickets[i].CompleteDate " placeholder="Difficulty Level" />
                </td>
                
                


            </tr>


            }

            


        </tbody>
    </table>