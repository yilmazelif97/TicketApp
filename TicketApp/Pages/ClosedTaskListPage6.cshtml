@page
@model TicketApp.Pages.ClosedTaskModel
@{
}

@*In this page, there is 2 button which one is Review other one is Complete. Listing closed tasks in page
*@
<form method="post">

 <table border="1" width="100%">
        <thead>
            <tr>
                <th>Subject</th>
                <th>Description</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @* form içerisinden birden fazla veri gönderdiğimizde index mekanizmasını kullanırız. bu sebep ile foreach yerine for kullandık *@

@*         Holding tasks which are closed in OpenTicket list. When click button it takes id of selected tasks id and send it to backend 
*@

            @for (int i = 0; i < Model.OpenTickets.Count; i++)
            {
            <tr>
                <td>
                    <input asp-for="OpenTickets[i].Subject " type="text" placeholder="Subject" />
                </td>
                <td>
                    <input asp-for="OpenTickets[i].Description" placeholder="Description" />
                </td>
                <td>
                    <input asp-for="OpenTickets[i].CustomerId " placeholder="Difficulty Level" />
                </td>
                 <td>
                    <input asp-for="OpenTickets[i].ClosedDate " placeholder="Difficulty Level" />
                </td>

                 <td>
                    <input type="submit" value="CloseTask" asp-route-id="@Model.OpenTickets[i].Id" asp-page-handler="CloseTask"> Close task />

                 </td>

                 <td>
                    <input type="submit" value="ReviewTask" asp-route-id="@Model.OpenTickets[i].Id" asp-page-handler="ReviewTask"> Review task />
                 </td>
                
                
               

                


            </tr>


            }

            


        </tbody>
    </table>

    </form>