@page
@model TicketApp.Pages.AssignedTasksListPage5Model
@{
}





    <table border="1" width="100%">
        <thead>
            <tr>
                <th>Subject</th>
                <th>Description</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @* form içerisinden birden fazla veri gönderdiğimizde index mekanizmasını kullanırız. bu sebep ile foreach yerine for kullandık *@

        

            @for (int i = 0; i < Model.OpenTickets.Count; i++)
            {
            <tr>
                <td>
                    <input asp-for="OpenTickets[i].Subject " type="text" placeholder="Subject" />
                </td>
                <td>
                    <input asp-for="OpenTickets[i].Description" placeholder="Description" />
                </td>
                <td>
                    <input asp-for="OpenTickets[i].LevelofDificulty " placeholder="Difficulty Level" />
                </td>
                 <td>
                    <input asp-for="OpenTickets[i].Priortiy " placeholder="Priority" />
                </td>
                
                <td>
                     <label>Select Employee </label>
                      <select asp-for="OpenTickets[i].EmployeeID " asp-items="Model.SelectListItems">
                     </select>
                </td>

                <div>
                    <button type="submit" asp-page-handler="AssignedTask"> Save </button>
                 </div>

                 <td>
                    <a asp-page="./AssignedTask" asp-route-id="@Model.OpenTickets[i].Id ">Get Selected Task informations</a>
                </td>

            </tr>


            }

            


        </tbody>
    </table>